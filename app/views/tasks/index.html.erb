<h1 class="mt-3">Tasks:</h1>
<div class="container">
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %><button><%= link_to "Delete", task_path(task), data: { turbo_method: :delete } %></button></li>
    <% end %>
  </ul>
</div>
<div class="container">
  <%= link_to "Add new task", new_task_path %>
</div>
