<h1>New Task</h1>
<div class="container">
  <%= form_with model: @task do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :details %><br>
      <%= form.text_area :details %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
