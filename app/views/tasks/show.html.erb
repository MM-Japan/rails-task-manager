<h1 class="mt-3">Here is your task:</h1>
<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
</div>

<div class="container">
  <%= link_to "Back", tasks_path %>
  <%= link_to "Edit task", edit_task_path %>
  <%= link_to "Delete task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Really? you sure about this?"} %>
</div>
